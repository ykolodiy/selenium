opera
	public static void main(String[] args) {
		System.setProperty("webdriver.opera.driver", "C:\\tmp\\operadriver.exe");
		
		OperaOptions oo = new OperaOptions();
		oo.setBinary("C:\\Users\\vkoloyu\\AppData\\Local\\Programs\\Opera\\launcher.exe");
		WebDriver driver = new OperaDriver(oo);
		
	
		driver.get("https://weather.com/");

	}
  
