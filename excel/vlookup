package writeExcel;
//VLOOKUP ROW1 AGAINST ROW2
import java.io.File;
import java.io.FileInputStream;
import java.io.FileOutputStream;

import org.apache.poi.ss.usermodel.DataFormatter;
import org.apache.poi.xssf.usermodel.XSSFSheet;
import org.apache.poi.xssf.usermodel.XSSFWorkbook;

public class VLOOKUP {

	public static void main(String[] args) throws Exception {
	
		File src = new File ("C:\\tmp\\test.xlsx");
		//input stream class
		FileInputStream fis = new FileInputStream (src);
		//load full workbook XSSF by xlsx
		XSSFWorkbook wb = new XSSFWorkbook(fis);
		//focus on sheet1 index0
		XSSFSheet sheet1 = wb.getSheetAt(0);
		DataFormatter formatter = new DataFormatter();
	//row1 col1
		
		Integer lastRow1 = 19;
		Integer lastRow2 = 16;
		Integer yes = 0;
		Integer no = 0;
		

		for (int i=1; i<=lastRow1; i++)
		{
			String data0 = formatter.formatCellValue(sheet1.getRow(i).getCell(0));
			sheet1.getRow(i).createCell(1).setCellValue("NO");
			for (int j=1; j<=lastRow2; j++){
				String data1 = formatter.formatCellValue(sheet1.getRow(j).getCell(2));
				if (data0.equals(data1)){
					sheet1.getRow(i).createCell(1).setCellValue("YES");
					yes = yes+1;
				}
				
			}
			
			
			
			//sheet1.getRow(i).createCell(1).setCellValue(data0);

		}
		no = lastRow1 - yes;
		
		//save file
		FileOutputStream fout = new FileOutputStream (src);
		wb.write(fout);
		
		System.out.println("yes: "+yes);
		System.out.println("no: "+no);
		

}
}
